<Window x:Class="OrderManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Name="OrdersTab">
                <TabItem.Header>
                    <TextBlock Text="Заявки"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding Orders}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Номер заявки"/>
                            <GridViewColumn Header="Дата"/>
                            <GridViewColumn Header="Клиент"/>
                            <GridViewColumn Header="Актуальный статус"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Name="DeletedOrdersTab">
                <TabItem.Header>
                    <TextBlock Text="Удалённые заявки"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding DeletedOrders}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Номер заявки"/>
                            <GridViewColumn Header="Дата"/>
                            <GridViewColumn Header="Клиент"/>
                            <GridViewColumn Header="Дата удаления"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Новая заявка" Command="{Binding OpenAddNewOrderWnd}"/>
        </StackPanel>
    </Grid>
</Window>
